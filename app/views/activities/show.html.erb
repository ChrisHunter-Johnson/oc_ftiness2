 <h1 class="page-title">Display My Activity - <%= @activity.activity_name %></h1>

<div class="container-fluid">

 <div class="row ">
  <div class="col-lg-1 text-right">
   <strong>Date:</strong>
 </div>
 <div class="col-lg-10 ">
  <%= @activity.activity_date %>
 </div>
</div>
<div class="row">
 <div class="col-lg-1 text-right">
  <strong>Time:</strong>
</div>
<div class="col-lg-10">
 <%= @activity.activity_duration.to_formatted_s(:time) %>
</div>
</div>




<%= icon('fas', 'edit') %><%= link_to 'Edit', edit_activity_path(@activity) %> |
<%= icon('fas', 'backward') %><%= link_to 'Back', activities_path %>
